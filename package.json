{
  "name": "marcus-chan-portfolio",
  "version": "2.0.0",
  "description": "Modern portfolio website for Marcus Chan - Full Stack Engineer & Cloud Architect. Built with Vite, featuring responsive design, interactive timeline, and project showcase.",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx,css,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,css,json}",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:services": "vitest run src/services/*.test.ts",
    "test:components": "vitest run src/components/*.test.ts",
    "test:timeline": "vitest run src/test/timeline.test.ts",
    "serve": "vite preview --port 4173",
    "pre-commit": "npm run lint && npm run format && npx tsc --noEmit && npm run test:run",
    "quality-check": "npm run pre-commit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarcusCJH/marcuscjh.github.io.git"
  },
  "keywords": [
    "portfolio",
    "website",
    "vite",
    "typescript",
    "javascript",
    "css",
    "html",
    "responsive",
    "modern",
    "github-pages",
    "full-stack",
    "cloud-architect",
    "developer"
  ],
  "author": {
    "name": "Marcus Chan",
    "email": "marcus.cjh@gmail.com",
    "url": "https://marcuscjh.github.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarcusCJH/marcuscjh.github.io/issues"
  },
  "homepage": "https://marcuscjh.github.io",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "gh-pages": "^6.3.0",
    "jiti": "^2.0.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.1",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vitest": "^3.2.4"
  }
}
